{
  "cookbooks_path": [ "./cookbooks", "./site-cookbooks" ],

  "data_bags_path": "./data_bags",

  "json": {
    // "users": [
    //     { "name": "sample", "group": "sample_group" }
    // ],
    "authorization": {
        "sudo": {
            "groups": ["vagrant"],
            "users": ["vagrant"],
            "passwordless": true,
            "sudoers_defaults": [
                "env_reset",
                "mail_badpass",
                "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\""
            ]
        }
    },
    "nodebrew": {
      "nodes": [
        { "version": "0.11.5", "binary": true },
        { "version": "0.10.21", "binary": false }
      ],
      "use": "0.10.21",
      "npm": {
        "0.11.5": ["forever", "express"],
        "0.10.21": [
          "underscore",
          "coffee-script",
          "async@0.2.9",
          { "name": "bower", "version": "1.1.2", "action": "install" }
         ]
      }
    }
  },

  "run_list": [
    // "users",
    "sudo",
    "recipe[apt]",
    "recipe[vim]",
    "recipe[git]",
    "recipe[nodebrew]"
  ],

  "add_recipes": []

}